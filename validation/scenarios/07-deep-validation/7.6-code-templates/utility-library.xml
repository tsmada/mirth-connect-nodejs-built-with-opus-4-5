      <properties class="com.mirth.connect.model.codetemplates.BasicCodeTemplateProperties">
        <type>FUNCTION</type>
        <code>/**
 * Formats a patient name from HL7v2 PID-5 components
 * @param {string} family - Family name
 * @param {string} given - Given name
 * @param {string} middle - Middle name (optional)
 * @return {string} Formatted name as "FAMILY, GIVEN M."
 */
function formatPatientName(family, given, middle) {
    var result = family.toUpperCase() + ', ' + given;
    if (middle &amp;&amp; middle.length > 0) {
        result += ' ' + middle.charAt(0).toUpperCase() + '.';
    }
    return result;
}</code>
