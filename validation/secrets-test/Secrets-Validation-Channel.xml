          <script>// ============================================================
// Secrets Validation Transformer
// ============================================================
// Reads secrets via $cfg() and $secrets(), builds a JSON
// result, and puts it in channelMap for the HTTP response.

// --- $cfg() tests ---
// $cfg() checks DB ConfigurationMap first, then falls back to SecretsManager
var cfgDbConn    = $cfg('DB_CONNECTION_STRING');
var cfgApiToken  = $cfg('API_TOKEN');
var cfgWebhook   = $cfg('WEBHOOK_URL');
var cfgEnvOnly   = $cfg('ENV_ONLY_SECRET');
var cfgPrefixed  = $cfg('PREFIXED_SECRET');
var cfgMissing   = $cfg('TOTALLY_MISSING_KEY');
var cfgEmpty     = $cfg('EMPTY_SECRET');

// --- $secrets() tests ---
// $secrets() goes directly to SecretsManager, bypasses DB
var secretsDbConn   = $secrets('DB_CONNECTION_STRING');
var secretsApiToken = $secrets('API_TOKEN');
var secretsMissing  = $secrets('TOTALLY_MISSING_KEY');

// --- Build JSON result ---
var result = {
  cfg: {
    DB_CONNECTION_STRING: cfgDbConn || 'NOT_FOUND',
    API_TOKEN: cfgApiToken || 'NOT_FOUND',
    WEBHOOK_URL: cfgWebhook || 'NOT_FOUND',
    ENV_ONLY_SECRET: cfgEnvOnly || 'NOT_FOUND',
    PREFIXED_SECRET: cfgPrefixed || 'NOT_FOUND',
    TOTALLY_MISSING_KEY: cfgMissing || 'NOT_FOUND',
    EMPTY_SECRET: cfgEmpty === undefined ? 'UNDEFINED' : (cfgEmpty === null ? 'NULL' : (cfgEmpty === '' ? 'EMPTY_STRING' : String(cfgEmpty)))
  },
  secrets: {
    DB_CONNECTION_STRING: secretsDbConn || 'NOT_FOUND',
    API_TOKEN: secretsApiToken || 'NOT_FOUND',
    TOTALLY_MISSING_KEY: secretsMissing || 'NOT_FOUND'
  },
  metadata: {
    channelName: channelName,
    timestamp: new Date().toISOString()
  }
};

// Store in channelMap — destination will use this as response body
channelMap.put('responseBody', JSON.stringify(result, null, 2));
logger.info('Secrets validation transformer complete');</script>
